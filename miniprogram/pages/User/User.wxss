.user_info_wrap {
    position: relative;
  }
  .user_info_wrap .user_img_wrap {
    width: 100vw;
    height: 50vh;
    overflow: hidden;
    background-color: var(--themeColor);
  }
  .user_info_wrap .user_img_wrap .user_bg {
    width: 100%;
    height: 52vh;
    filter: blur(12rpx);
  }
  .user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    top: 15%;
    transform: translateX(-50%);
  }
  .user_info_wrap .user_img_wrap .user_info .user_inco {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    text-align: center;
  }
  .user_info_wrap .user_img_wrap .user_info .user_name {
    margin-top: 52rpx;
    color: white;
    text-align: center;
    font-weight: bold;
  }
  .user_info_wrap .user_img_wrap button {
    margin-top: 220rpx;
  }
  .user_info_wrap .user_conente {
    background-color: #F6F6F6;
  }
.user_info_wrap .customer {
  width: 100vw;
  padding: 0;
  font-weight: normal;
}
.user_info_wrap .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #FBFBFB;
  font-size: 24rpx;
}
.user_info_wrap .btn {
  width: 100vw;
  padding-left: 20rpx;
  font-weight: normal;
  margin: 0;
  background: #ffffff;
}
.user_info_wrap .share {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  height: 90rpx;
  padding-left: 20rpx;
  background-color: #ffffff;
}