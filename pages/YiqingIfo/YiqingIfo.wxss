page {
  width: 100vw;
  height: 100vh;
}
.news_category {
  width: 100%;
  height: 100%;
}
.news_category .cates {
  display: flex;
  height: calc(100vh - 90rpx);
}
.news_category .cates .left_menu_list {
  flex: 3;
  background-color: #F6F6F6;
  color: #9D9D9D;
}
.news_category .cates .left_menu_list .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.news_category .cates .left_menu_list .active {
  border-left: 5rpx solid #EF250F;
  font-weight: bold;
  font-size: 32rpx;
  color: #000000;
}
.news_category .cates .right_content {
  flex: 8;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
.news_category .cates .right_content .news {
  margin-bottom: 10rpx;
}
.news_category .cates .right_content .news .blod_font {
  font-weight: 700;
}
